<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg"
    tools:context=".Activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="“Bring a life back to power. Make blood donation your responsibility”"
            android:layout_gravity="center"
            android:textColor="#191A1A"
            android:textSize="25sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="375dp"
            android:layout_height="65dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:hint="Name"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#152E47"
            android:textSize="25sp" />



        <EditText
            android:id="@+id/City"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:hint="City"
            android:textColor="#152E47"
            android:textSize="25sp" />


        <EditText
                android:id="@+id/MobileNumber"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
                android:hint="Mobile Number"
                android:inputType="number"
                android:textColor="#152E47"
                android:textSize="25sp" />



            <EditText
                android:id="@+id/BloodGroup"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:hint="Blood Group"
                android:textColor="#152E47 "
                android:textSize="25sp" />



            <EditText
                android:id="@+id/password"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#152E47 "
                android:textSize="25sp" />


        <Button
            android:id="@+id/submit_button"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30sp"
            android:background="#930C29"
            android:text="Become a Donor!"
            android:textAllCaps="false"
            android:textColor="#F9FCFF "
            android:textStyle="bold">

        </Button>


    </LinearLayout>


</ScrollView>